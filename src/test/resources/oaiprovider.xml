<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="oaiProviderService" class="org.fcrepo.oai.service.OAIProviderService">
        <property name="identifyUri" value="info:fedora/oai/identify"/>
        <property name="metadataFormats">
            <list>
                <ref bean="oaiDcFormat"/>
            </list>
        </property>
    </bean>

    <bean name="oaiDcFormat" class="org.fcrepo.oai.MetadataFormat" >
        <constructor-arg index="0" value="oai_dc" />
        <constructor-arg index="1" value="http://www.openarchives.org/OAI/2.0/oai_dc.xsd" />
        <constructor-arg index="2" value="http://www.openarchives.org/OAI/2.0/oai_dc/" />
    </bean>

</beans>
